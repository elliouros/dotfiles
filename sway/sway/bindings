set $alt Mod1
set $mod Mod4
set $altgr Mod5

set $left h
set $down j
set $up k
set $right l

set $goto workspace number
set $move move container to workspace number

bindgesture {
  swipe:right workspace prev
  swipe:left workspace next
}

bindsym {
  $mod+Shift+Escape exit
  $mod+z                exec --no-startup-id swaylock
  $mod+$alt+z           exec --no-startup-id swaylock -C ~/.config/swaylock/private
  --locked $mod+Shift+z exec --no-startup-id systemctl suspend

  $mod+F6       exec --no-startup-id brightnessctl set 5%-
  $mod+F7       exec --no-startup-id brightnessctl set 5%+
  $mod+Shift+F6 exec --no-startup-id brightnessctl set 1%-
  $mod+Shift+F7 exec --no-startup-id brightnessctl set 1%+

  --locked $mod+F8        exec --no-startup-id wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
  --locked $mod+F9        exec --no-startup-id wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
  --locked $mod+F10       exec --no-startup-id wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
  --locked $mod+Shift+F9  exec --no-startup-id wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%-
  --locked $mod+Shift+F10 exec --no-startup-id wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+

  --locked $mod+$alt+F8  exec --no-startup-id wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
  --locked $mod+$alt+F9  exec --no-startup-id wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 5%-
  --locked $mod+$alt+F10 exec --no-startup-id wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 5%+

  $mod+s            exec --no-startup-id ~/.config/sway/screenshot --copy screen
  $mod+Shift+s      exec --no-startup-id ~/.config/sway/screenshot --copy slurp
  $mod+Ctrl+s       exec --no-startup-id ~/.config/sway/screenshot --copy current
  $mod+$alt+s       exec --no-startup-id ~/.config/sway/screenshot screen
  $mod+$alt+Shift+s exec --no-startup-id ~/.config/sway/screenshot slurp
  $mod+$alt+Ctrl+s  exec --no-startup-id ~/.config/sway/screenshot current

  # $mod+n            exec --no-startup-id swaync-client --toggle-panel
  # $mod+$alt+n       exec --no-startup-id swaync-client --toggle-dnd -sw
  # $mod+Shift+$alt+n exec --no-startup-id swaync-client --close-all -sw
  # $mod+Shift+n      exec --no-startup-id ~/.config/sway/swaync-menu.nu

  $mod+q       exec $term
  $mod+w       exec $browser
  $mod+e       exec --no-startup-id $dmenu
  $mod+Shift+e exec --no-startup-id $menu
  $mod+c       kill

  $mod+$left  focus left
  $mod+$down  focus down
  $mod+$up    focus up
  $mod+$right focus right

  $mod+Left  focus left
  $mod+Down  focus down
  $mod+Up    focus up
  $mod+Right focus right

  $mod+$alt+$left  move left
  $mod+$alt+$down  move down
  $mod+$alt+$up    move up
  $mod+$alt+$right move right

  $mod+$alt+Left  move left
  $mod+$alt+Down  move down
  $mod+$alt+Up    move up
  $mod+$alt+Right move right

  $mod+f fullscreen toggle
  $mod+v split toggle
  $mod+Shift+v layout toggle split
  $mod+Ctrl+v  layout toggle all

  $mod+a       focus parent
  $mod+Shift+a focus child

  $mod+Shift+space floating toggle
  $mod+space       focus mode_toggle

  $mod+grave gaps outer current toggle $gaps_o; gaps inner current toggle $gaps_i

  $mod+minus workspace prev
  $mod+equal workspace next

  $mod+1 $goto 1
  $mod+2 $goto 2
  $mod+3 $goto 3
  $mod+4 $goto 4
  $mod+5 $goto 5
  $mod+6 $goto 6
  $mod+7 $goto 7
  $mod+8 $goto 8
  $mod+9 $goto 9
  $mod+0 $goto 0

  $mod+$alt+1 $move 1
  $mod+$alt+2 $move 2
  $mod+$alt+3 $move 3
  $mod+$alt+4 $move 4
  $mod+$alt+5 $move 5
  $mod+$alt+6 $move 6
  $mod+$alt+7 $move 7
  $mod+$alt+8 $move 8
  $mod+$alt+9 $move 9
  $mod+$alt+0 $move 0

  $mod+Shift+1 $move 1; $goto 1
  $mod+Shift+2 $move 2; $goto 2
  $mod+Shift+3 $move 3; $goto 3
  $mod+Shift+4 $move 4; $goto 4
  $mod+Shift+5 $move 5; $goto 5
  $mod+Shift+6 $move 6; $goto 6
  $mod+Shift+7 $move 7; $goto 7
  $mod+Shift+8 $move 8; $goto 8
  $mod+Shift+9 $move 9; $goto 9
  $mod+Shift+0 $move 0; $goto 0

  $mod+Shift+Tab move scratchpad
  $mod+Tab       scratchpad show

  $mod+Shift+c reload
}

mode "resize" bindsym {
  # slightly differs from standard sway bindings-
  # mine:     hj grow, kl shrink
  # standard: hk shrink, jl grow
  # it's more intuitive to me this way; the left keys grow and the right shrink
  $left  resize grow width 10 px or 10 ppt
  $down  resize grow height 10 px or 10 ppt
  $up    resize shrink height 10 px or 10 ppt
  $right resize shrink width 10 px or 10 ppt

  Left  resize grow width 10 px or 10 ppt
  Down  resize grow height 10 px or 10 ppt
  Up    resize shrink height 10 px or 10 ppt
  Right resize shrink width 10 px or 10 ppt

  Escape mode "default"
  $mod+r mode "default"
}
bindsym $mod+r mode "resize"

bindsym $mod+Return input type:touchpad events toggle enabled disabled
