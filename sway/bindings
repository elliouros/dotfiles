set $alt Mod1
set $mod Mod4
set $altgr Mod5

set $left h
set $down j
set $up k
set $right l

set $goto workspace number
set $move move container to workspace number

bindsym $mod+grave gaps outer current toggle $gaps_o; gaps inner current toggle $gaps_i
# bindsym $mod+z exec i3lock

bindsym $mod+F6 exec --no-startup-id brightnessctl set 5%-
bindsym $mod+F7 exec --no-startup-id brightnessctl set 5%+

bindsym $mod+F8 exec --no-startup-id pactl set-sink-mute \@DEFAULT_SINK@ toggle
bindsym $mod+F9 exec --no-startup-id pactl set-sink-volume \@DEFAULT_SINK@ -5%
bindsym $mod+F10 exec --no-startup-id pactl set-sink-volume \@DEFAULT_SINK@ +5%

# bindsym $mod+$alt+F8 exec --no-startup-id pactl set-source-mute \@DEFAULT_SOURCE toggle
# bindsym $mod+$alt+F9 exec --no-startup-id pactl set-source-volume \@DEFAULT_SOURCE -5%
# bindsym $mod+$alt+F10 exec --no-startup-id pactl set-source-volume \@DEFAULT_SOURCE +5%

# bindsym $mod+e exec --no-startup-id ~/.config/rofi/launcher/launch.sh
# bindsym $mod+Escape exec --no-startup-id ~/.config/rofi/powermenu/launch.sh
bindsym $mod+Shift+Escape exit

bindsym $mod+q exec $term
bindsym $mod+w exec $browser
# bindsym $mod+d exec --no-startup-id dmenu_run
bindsym $mod+c kill

bindsym $mod+a focus parent
bindsym $mod+d focus child

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+$alt+$left move left
bindsym $mod+$alt+$down move down
bindsym $mod+$alt+$up move up
bindsym $mod+$alt+$right move right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+b split h
bindsym $mod+v split v

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+f fullscreen toggle
bindsym $mod+s layout toggle split

bindsym $mod+1 $goto 1
bindsym $mod+2 $goto 2
bindsym $mod+3 $goto 3
bindsym $mod+4 $goto 4
bindsym $mod+5 $goto 5
bindsym $mod+6 $goto 6
bindsym $mod+7 $goto 7
bindsym $mod+8 $goto 8
bindsym $mod+9 $goto 9
bindsym $mod+0 $goto 10

bindsym $mod+$alt+1 $move 1
bindsym $mod+$alt+2 $move 2
bindsym $mod+$alt+3 $move 3
bindsym $mod+$alt+4 $move 4
bindsym $mod+$alt+5 $move 5
bindsym $mod+$alt+6 $move 6
bindsym $mod+$alt+7 $move 7
bindsym $mod+$alt+8 $move 8
bindsym $mod+$alt+9 $move 9
bindsym $mod+$alt+0 $move 10

bindsym $mod+Shift+1 $move 1; $goto 1
bindsym $mod+Shift+2 $move 2; $goto 2
bindsym $mod+Shift+3 $move 3; $goto 3
bindsym $mod+Shift+4 $move 4; $goto 4
bindsym $mod+Shift+5 $move 5; $goto 5
bindsym $mod+Shift+6 $move 6; $goto 6
bindsym $mod+Shift+7 $move 7; $goto 7
bindsym $mod+Shift+8 $move 8; $goto 8
bindsym $mod+Shift+9 $move 9; $goto 9
bindsym $mod+Shift+0 $move 0; $goto 0

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

bindsym $mod+Shift+c reload

mode "resize" {
  bindsym $left resize shrink width 10 px or 10 ppt
  bindsym $down resize grow height 10 px or 10 ppt
  bindsym $up resize shrink height 10 px or 10 ppt
  bindsym $right resize grow width 10 px or 10 ppt

  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

mode "no binds (mod+Shift+Tab to exit)" {
  bindsym $mod+Shift+Tab mode "default"
}
bindsym $mod+Shift+Tab mode "no binds (mod+Shift+Tab to exit)"
